<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RDC Tasks App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="spinner-loader" class="spinner d-none">
        <img src="~/Images/spinner.svg" alt="" />
    </div>

    @Html.Partial("_NavBarPartial")

    <div class="container body-content" id="page">
        @RenderBody()
    </div>

    <hr />
    <footer class="d-flex justify-content-center">
        <p>&copy; @DateTime.Now.Year - RDC Tasks App</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/javaScript")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
